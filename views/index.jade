extends layout

block content
  div#header
    h1= title
  div#theForm  
    form(
      method='POST'
      id='main-form'
    )
      div#options-group
        div.test-options    
          select#testSelector(name='test')
            //- TODO: make the optgroups and options autogenerated
            optgroup(label='Week 2')
              option(value='hw2-fract') 1: Fractions
              option(value='hw2-triangle') 3a: Letter triangle
              option(value='hw2-song') 3b: Song lyrics
              option(value='hw2-and') 4: && simulator
              option(value='hw2-cards') 5a,b: Cards
          //- Hide until future weeks:
            optgroup(label='Week 3')
              option(value='hw3-arrays') Arrays      
              option(value='hw3-cards') Cards
              option(value='hw3-network') Social Network
              option(value='hw3-cards') Tests
            optgroup(label='Week 4')
              option(value='hw4-deque') Deque
              option(value='hw4-factory') Factory
            optgroup(label='Week 5')
              option(value='hw5-cards') Cards
              option(value='hw5-deque') Deque
              option(value='hw5-secrets') Secrets    
        div.test-options
          fieldset.exports
            legend Functions to be tested:
            - var attributes = { 'autocomplete': 'off', 'spellcheck': 'false' }
            textarea#exports(name='exports' readonly)&attributes(attributes)
        div.test-options 
          button#submit(formaction='/done') Test!
      div#test-code  
        fieldset.code
          legend Enter your code here:
          - var attributes = { 'autocomplete': 'off',  'spellcheck': 'false' }
          textarea#code(name='code')&attributes(attributes)
      div#mocha
